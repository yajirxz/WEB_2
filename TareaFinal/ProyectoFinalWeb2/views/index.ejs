<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">

    <title>Inicio</title>
</head>
<body>
    <h1>Listar</h1>
    <table border="2">
        <tr>
            <td>ID</td>
            <td>Nombre</td>
            <td>Correo</td>
            <td>Acciones</td>  
        </tr>
        <%users.forEach(user=>{ %>
            <tr>
                <td><%=user.id%></td>
                <td><%=user.nombre%></td>
                <td><%=user.email%></td>
                <td>
                    <a href="/edit/<%=user.id%>">Editar</a>
                    <a href="/delete/<%=user.id%>">Eliminar</a>
                </td>
            </tr>
        <% }); %>
    </table>

    <!-- Formulario para agregar usuario -->

    <h2>Agregar Usuario</h2>
    <form action="/add" method="post">
        <label for="nombre">Nombre</label>
        <input type="text" id="name" name="nombre" required maxlength="45" placeholder="Nombre de usuario">
        <br><br>
        <label for="email">Correo</label>
        <input type="email" id="email" name="email" maxlength="45" placeholder="Correo">
        <br><br>
        <button type="submit">Agregar</button>

</body>
</html>